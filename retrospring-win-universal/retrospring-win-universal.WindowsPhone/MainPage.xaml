<Page
    x:Class="retrospring_win_universal.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:retrospring_win_universal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Refresh" Label="Refresh (DEBUG)" Click="AppBarButton_Click"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="243*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="debugTextBlock" HorizontalAlignment="Left" Margin="20,81,0,0" TextWrapping="Wrap" Text="Debug!" VerticalAlignment="Top" Foreground="Red" Grid.RowSpan="2"/>
        <ListView x:Name="timelineListView" Grid.Row="1" ItemsSource="{Binding}">
            <ListViewItem FontSize="16" />
        </ListView>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" Text="Retrospring" VerticalAlignment="Top" Style="{StaticResource HeaderTextBlockStyle}"/>

    </Grid>
</Page>